@model WebMyWorldEC.Models.Response.DataCategoriesServices

@{
    ViewBag.Title = "Delete Category in Service";
}

@if (Request.IsAuthenticated)
{
    <h2 class="text-center">@ViewBag.Title</h2>

    <div>
        <h3>Are you sure you want to delete this?</h3>
        <div class="form-group">
            <input class="btn btn-default" value="Back to List" type="submit" onclick="location.href='@Url.Action("Index", "Categories_Services")';return false;" />
        </div>
    </div>
    <hr />


    <div>
        <dl class="dl-horizontal col-md-offset-3">

            <dt>
                @Html.DisplayName("Service")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Service.Name)
            </dd>

            <dt>
                @Html.DisplayName("Category")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.Name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions text-center">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        }
    </div>

}
else
{
    Response.Redirect(Url.Action("Login", "Account"));
}