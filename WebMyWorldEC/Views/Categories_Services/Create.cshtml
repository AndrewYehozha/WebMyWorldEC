@model WebMyWorldEC.Models.Response.DataCategoriesServices

@{
    ViewBag.Title = "Create Category in Service";
}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    if (Request.IsAuthenticated)
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input class="btn btn-default" value="Back to List" type="submit" onclick="location.href='@Url.Action("Index", "Categories_Services")';return false;" />
        </div>
        <hr />

        <div class="form-horizontal col-md-offset-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.IdServices, "Services", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdServices", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdServices, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdCategories, "Categories", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdCategories", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdCategories, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="text-center col-md-8">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>

    }
    else
    {
        Response.Redirect(Url.Action("Login", "Account"));
    }
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }