@model WebMyWorldEC.Models.Response.DataUser

@{
    ViewBag.Title = "Details User";
}

@if (Request.IsAuthenticated)
{
    <h2 class="text-center">@ViewBag.Title</h2>

    <div class="form-group">
        <div>
            <input class="btn btn-default" value="Back to List" type="submit" onclick="location.href='@Url.Action("Index", "Users")';return false;" />
        </div>
    </div>
    <hr />
    <div>
        <dl class="dl-horizontal col-md-offset-4">
            <dt>
                @Html.DisplayName("Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayName("Surname")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Birsday)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Birsday)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateRegistered)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateRegistered)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsBlocked)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsBlocked)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsAdministration)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsAdministration)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BonusScore)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BonusScore)
            </dd>

        </dl>
    </div>
    <div class="form-actions text-center">
        <input class="btn btn-default" value="Edit" type="submit" onclick="location.href = '@Url.Action("Edit", "Users", new { id = Model.Id })';" />
    </div>

}
else
{
    Response.Redirect(Url.Action("Login", "Account"));
}