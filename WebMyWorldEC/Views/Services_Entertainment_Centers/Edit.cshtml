@model WebMyWorldEC.Models.Response.DataServicesToEC

@{
    ViewBag.Title = "Edit Service in Mall";
}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    if (Request.IsAuthenticated)
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input class="btn btn-default" value="Back to List" type="submit" onclick="location.href='@Url.Action("Index", "Services_Entertainment_Centers")';return false;" />
        </div>
        <hr />

        <div class="form-horizontal col-md-offset-3" style="width:1000px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Entertainment_CenterId, "Mall", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10" style="margin-top:7px;">
                    @Html.DisplayFor(m => m.Entertainment_Centers.Name)
                    @Html.ValidationMessageFor(model => model.Entertainment_Centers.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Entertainment_Centers.Address, "Address of the Mall", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5" style="margin-top:7px;">
                    @Html.DisplayFor(m => m.Entertainment_Centers.Address)
                    @Html.ValidationMessageFor(model => model.Entertainment_Centers.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ServiceId, "Service", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10" style="width:250px;">
                    @Html.DropDownList("ServiceId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ServiceId, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="form-group">
                    @Html.LabelFor(model => model.Service.Description, "Service Description", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5" style="margin-top:7px;">
                        @Html.DisplayFor(m => m.Service.Description)
                        @Html.ValidationMessageFor(model => model.Service.Description, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            @Html.HiddenFor(model => model.Id)

            <div class="form-group text-center">
                <div class=" col-md-6">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    else
    {
        Response.Redirect(Url.Action("Login", "Account"));
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
